@model Section106.Models.Models.CorrespondenceTypeVM
@using Section106.Models

<div class="row form-group">
    <div class="col-md-12">
        <div class="dashboard-title">
            <h3>Edit Correspondence Type</h3>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 text-left">
        <a class="btn btn-default" href="~/Admin/CorrespondenceType">Back To List</a>
    </div>
    <div class="col-md-6 text-right">
    </div>
</div>

<div class="row margin-top30 form-horizontal">
    <div class="col-md-12">
        @using (Html.BeginForm("UpdateCorrespondenceType", "Admin", FormMethod.Post, new { role = "form" }))
            {
            @Html.HiddenFor(p => p.CorrespondenceTypeId)
            <div class="row form-group">
                <div class="col-md-12">
                    <div class="section-box">
                        <div class="row form-group">
                            <div class="col-md-12">
                                <div class="section-col-box-noheight">
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(m => m.Description) <span class="text-danger">*</span>
                                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(m => m.Template)
                                            @Html.TextAreaFor(m => m.Template, 10, 0, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Template, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-9">
                </div>
                <div class="col-md-3 text-right">
                    <a href="@Url.Action("CorrespondenceType", "Admin")" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-info">Update</button>
                </div>
            </div>
        }
    </div>
</div>

<style type="text/css">
    .control-label {
        text-align: left !important;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="https://cdn.ckeditor.com/4.7.2/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('Template');
</script>
