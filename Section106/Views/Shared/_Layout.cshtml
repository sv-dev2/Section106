<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/images/Web_Logo_Favicon.png" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Section 106</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img src="~/Content/images/Section106_logo.png" />
                        @*@Html.ActionLink("Section 106", "", "", new { area = "" }, new { @class = "navbar-brand proj_logo" })*@
                        @*<h3>Section 106</h3>*@
                    </div>
                    <div class="navbar-collapse collapse">

                        @if (User.IsInRole("Admin"))
                        {
                            <ul class="nav navbar-nav text-right">
                                <li>@Html.ActionLink("Dashboard", "Index", "Admin")</li>
                                <li>@Html.ActionLink("Agency Type", "AgencyType", "Admin")</li>
                                <li>@Html.ActionLink("Correspondence Type", "CorrespondenceType", "Admin")</li>
                                <li>@Html.ActionLink("Agency", "Agency", "Admin")</li>
                                <li>@Html.ActionLink("Accounts", "ReviewerAccounts", "Admin")</li>
                                <li>@Html.ActionLink("Reports", "Reports", "Admin")</li>
                            </ul>
                        }

                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="body-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <div class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @*<hr />*@
                    @*<footer>
                            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                        </footer>*@
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.success('@TempData["SuccessMessage"]')
            })
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.error('@TempData["ErrorMessage"]')
            })
        </script>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.info('@TempData["InfoMessage"]')
            })
        </script>
    }

    @Scripts.Render("~/bundles/jquery")
    @*<script src="~/Scripts/datatables.min.js"></script>*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
</body>
</html>
